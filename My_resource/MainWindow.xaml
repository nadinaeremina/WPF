<Window x:Class="My_resource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_resource"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <!--без исп-ия ресурсов-->
    <Grid>
        <StackPanel>
            <Label Name="Lb1" Height="30" Width="150" Content="Надпись до кнопки №1" />
            <Button Name="Bt1" Height="25" Width="80" Content="Кнопка 1" >
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" >
                        <GradientStop Color="Green" Offset="0.0"/>
                        <GradientStop Color="Yellow" Offset="0.5"/>
                        <GradientStop Color="Blue" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label Name="Lb2" Height="30" Width="150" Content="Надпись между кнопками" />
            <Button Name="Bt2" Height="25" Width="80" Content="Кнопка 2" />
            <Label Name="Lb3" Height="30" Width="150" Content="Надпись после кнопки №2" />
        </StackPanel>
    </Grid>
</Window>
