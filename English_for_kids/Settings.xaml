<Window x:Class="English_for_kids.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:English_for_kids"
        mc:Ignorable="d"
        Title="Autorization" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,472,21">
        <WrapPanel Margin="0,0,-471,0">
            <StackPanel Orientation="Horizontal">
                <Image Width="559" Source="play.jpg"/>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left" Width="205">
                    <TextBlock Height="21">Введите имя:</TextBlock>
                    <TextBox x:Name="txt_name" Height="39" Margin="0,0,-1,0"></TextBox>
                    <TextBlock Height="22">Введите возраст:</TextBlock>
                    <TextBox x:Name="txt_age" Height="38"></TextBox>
                    <Button  Foreground="Blue" Click="Button_Click" Margin="53,0,38,0" Height="48" Background="Yellow" FontStyle="Italic" BorderThickness="2" FontFamily="Swis721 Hv BT" FontSize="16">Сохранить</Button>
                </StackPanel>
            </StackPanel>
        </WrapPanel>
    </Grid>
</Window>
