<Window x:Class="English_for_kids.Go1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:English_for_kids"
        mc:Ignorable="d"
        Title="Go1" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image Source="lion.jpg" Width="439"></Image>
            <StackPanel Orientation="Vertical" Width="295">
                <TextBlock>1 question of 5</TextBlock>
                <TextBlock>Choose the correct answer</TextBlock>
                <ListBox>
                   
                </ListBox>
                <StackPanel Orientation="Horizontal">
                    <TextBlock>right answers</TextBlock>
                    <TextBlock Name="txt_right">8</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock>wrong answers</TextBlock>
                    <TextBlock Name="txt_wrong">7</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock>time left</TextBlock>
                    <TextBlock Name="txt_timer">66</TextBlock>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
