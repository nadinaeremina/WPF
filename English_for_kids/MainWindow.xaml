<Window x:Name="main" x:Class="English_for_kids.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:English_for_kids"
        mc:Ignorable="d"
        Title="LEARNING" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <WrapPanel Width="646">
            <Image Height="363" Source="English.jpg" Stretch="Fill"  Width="641"/>
            <TextBlock Width="76" FontSize="16" Foreground="Blue" FontStyle="Italic">Loading...</TextBlock>
            <Grid Width="485">
                <ProgressBar Name="p_bar" />
                <TextBlock Text="{Binding ElementName=p_bar, Path=Value, StringFormat={}{0:0}% }" VerticalAlignment="Bottom" TextAlignment="Center" />
            </Grid>
            <Button Name="btn_start" Click="btn_start_Click" Width="81" Height="20" Background="{x:Null}" Foreground="Red" FontSize="14" FontFamily="Sitka Small" BorderThickness="0" FontStyle="Italic">START</Button>
        </WrapPanel>
    </Grid>
</Window>
