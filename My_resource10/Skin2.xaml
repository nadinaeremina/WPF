<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type DockPanel}">
        <Setter Property="Background" Value="Aqua"/>
    </Style>

    <LinearGradientBrush x:Key="GBB" StartPoint="0,0" EndPoint="1,0" >
        <GradientStop Color="Green" Offset="0.0"/>
        <GradientStop Color="Yellow" Offset="0.5"/>
        <GradientStop Color="Blue" Offset="1.0"/>
    </LinearGradientBrush>

    <Style TargetType="{x:Type Button}"  x:Key="ButtonStyle">
        <Setter Property="Background" Value="{DynamicResource GBB}"/>
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="Freestyle Script"/>
        <Setter Property="Margin" Value="270,100"/>
    </Style>

    <Style TargetType="{x:Type Border}" x:Key="BorderStyle">
        <Setter Property="BorderBrush" Value="Red"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="CornerRadius" Value="45"/>
        <Setter Property="Padding" Value="25"/>
    </Style>
</ResourceDictionary>